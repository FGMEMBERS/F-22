 <!--station left 1 -->

<model>
    <name>left-Droptank</name>
    <path>Aircraft/F-22/Models/loads/Tank.xml</path>
    <offsets>
      <x-m> 2.05  </x-m>
      <y-m> -3.1 </y-m>
      <z-m> -1.5 </z-m>
      <pitch-deg> 0.0 </pitch-deg>
    </offsets>
  </model>	

  <animation>
    <type>select</type>
    <object-name>left-Droptank</object-name>      
    <condition>
      <and>
        <equals>
          <property>sim/weight[0]/selected</property>
          <value>L-Droptank</value>
        </equals>
        <equals>
          <property>controls/armament/station[0]/release</property>
          <value>false</value>
        </equals>
      </and>
    </condition>
	 
  </animation>




