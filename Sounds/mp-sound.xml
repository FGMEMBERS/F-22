    <!-- Sonic Boom -->
  <sonicboom>
   <name>Sonic Boom</name>
	<mode>once</mode>
   <path>Aircraft/F-22/Sounds/sonicboom.wav</path>
   <condition>
   <and>
	    <greater-than>
	     	<property>velocities/mach</property>
	     	<value>1.0</value>
	    </greater-than>
	    <equals>
		    <property>sim/current-view/internal</property>
		    <value>false</value>
		</equals>
	</and>
   </condition>
    <reference-dist>600.0</reference-dist>
    <max-dist>6000.0</max-dist>
  </sonicboom>


